<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android1:layout_width="match_parent" 
    android:orientation="vertical"
    android:padding="10dp"
     android:background="#F44336"
     xmlns:android1="http://schemas.android.com/apk/res/android">

     <TextView
         android1:id="@+id/textView1"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:text="@string/Pemail"
         android1:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android1:id="@+id/textView2"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:layout_marginTop="44dp"
         android1:text="@string/Remail" />

     <EditText
         android1:id="@+id/EmailR"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:layout_marginTop="32dp"
         android1:ems="10" 
          android:inputType="textEmailAddress"/>

     <TextView
         android1:id="@+id/textView3"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:text="@string/Temail" />

     <EditText
         android1:id="@+id/EmailT"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:layout_marginTop="40dp"
         android1:ems="10"
         android:inputType="text" >  
     </EditText>

     <TimePicker
         android1:id="@+id/timePicker1"
         android1:layout_width="wrap_content"
         android1:layout_height="112dp" />

     <Button
         android1:id="@+id/EmailP"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:text="@string/Program" />
        
</LinearLayout>
